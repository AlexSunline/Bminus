@model User

<div class="wrapper fadeInDown space">
    <div class="text-center">
        <h1>Регистрация на B-minus!</h1>
        <hr class="redline" />
        <p>
            Заполните форму ниже.
        </p>
    </div>
    <form method="post">
        <div class="row">
            <div class="col mb-3">
                <input type="text" class="form-control" placeholder="Псевдоним" asp-for="Nickname" required />
            </div>
        </div>
        <div class="row">
            <div class="col mb-3">
                <input type="text" class="form-control" placeholder="Пароль" asp-for="Password" required />
            </div>
        </div>
        <div class="row">
            <div class="col mb-3">
                <input type="email" class="form-control" placeholder="Email" asp-for="Email" required />
            </div>
        </div>
        <div class="row">
            <div class="col mb-3 text-center">
                <input class="btn btn-outline-success" type="submit" value="Зарегестрироваться" />
            </div>
        </div>
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="row">
                <div class="col mb-3 text-center">
                    <span class="badge badge-danger">@Model.ErrorMessage</span>
                </div>
            </div>
        }
    </form>
</div>